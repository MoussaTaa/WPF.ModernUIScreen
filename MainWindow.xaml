<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="900"
        WindowStyle="None"
        ResizeMode="NoResize"
        Background="#181735" Icon="/managmentPIc.png">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!--UpBar Grid-->
        <Grid Background="#0f0f2d" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Grid.Column="1"
                       Text="MMS" 
                       />
            <TextBlock Grid.Column="2" 
                       Text="Settings" 
                       Foreground="LightGray" 
                       />
            <TextBlock Grid.Column="3"
                       Text="Menu" 
                       Foreground="LightGray" 
           />
            <TextBlock Grid.Column="4"
                       Text="Reload" 
                       Foreground="LightGray" 
           />
            <Button x:Name="btnClose" Content="Close"
                    FontSize="11"
                    Cursor="Hand" Grid.Column="11"  Grid.ColumnSpan="3" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Foreground" Value="#eee"/>
                        <Setter Property="FontWeight" Value="Medium"/>
                        <Setter Property="Background" Value="#ff5c77"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff6584"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="100" Height="25" CornerRadius="8" Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="40,0,20,0">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <Image Height="50" Width="50" Source="/managmentPIc.png"/>
                    <TextBlock Margin="10,0,0,0" Text="Mahali Managment System" 
                   FontSize="20"
                   />
                </StackPanel>
                <TextBlock Text="Customize" 
                           FontSize="24"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Your" 
                           FontSize="24"
                           HorizontalAlignment="Left"/>
                <TextBlock Text="Experience" 
                           FontSize="24"
                           HorizontalAlignment="Left"/>
                <TextBlock Margin="0,10,0,0" Text="This is Just A Simple Training To Made A Modern Design In WPF And Why Not it could be My Future Splash Screen, anyways Go Follow Me In GitHub @Moussataal" 
               FontSize="10"
               HorizontalAlignment="Left"
               TextWrapping="Wrap"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0">

                <Button x:Name="btnStart" Content="Start"
                        FontSize="14" Height="40"
                        Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#eee"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Background" Value="#ff5c77"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#ff6584"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnRegister" Content="Register"
                        FontSize="14" Height="40"
                        Cursor="Hand" Background="#3FFFFFFF"
                        Margin="14,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Foreground" Value="#eee"/>
                            <Setter Property="FontWeight" Value="Medium"/>
                            <Setter Property="Background" Value="#3FFFFFFF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#1FFFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="100" Height="25" CornerRadius="12" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </StackPanel>
    
    
    </Grid>
</Window>
